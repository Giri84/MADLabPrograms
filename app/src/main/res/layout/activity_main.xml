<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Application"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/getphNumber"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textViewPhoneNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:hint="Enter the number"
        android:textColorHint="@color/black"
        android:textColor="@color/black">
    </EditText>

    <Button
        android:id="@+id/btnclr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPhoneNumber"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/getphNumber"
        android:text="Clear"
        android:layout_marginRight="10dp">
    </Button>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getphNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="15dp">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_toRightOf="@id/btn1"
            android:layout_marginLeft="30dp">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_toRightOf="@id/btn2"
            android:layout_marginLeft="30dp">
        </Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/btn1">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_toRightOf="@id/btn1"
            android:layout_below="@id/btn2"
            android:layout_marginLeft="30dp">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn3"
            android:layout_marginLeft="30dp">
        </Button>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/btn4">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_toRightOf="@id/btn1"
            android:layout_below="@id/btn5"
            android:layout_marginLeft="30dp">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn6"
            android:layout_marginLeft="30dp">
        </Button>

        <Button
            android:id="@+id/btnstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/btn7">
        </Button>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@id/btn1"
            android:layout_below="@id/btn8"
            android:layout_marginLeft="30dp">
        </Button>
        <Button
            android:id="@+id/btnhas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn9"
            android:layout_marginLeft="30dp">
        </Button>

        <Button
            android:id="@+id/btncall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="call"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/btnstr">
        </Button>

        <Button
            android:id="@+id/btnsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btnhas"
            android:layout_marginLeft="30dp">
        </Button>


    </RelativeLayout>
</RelativeLayout>